<div class="page-content container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <% if alert %>
        <div class="alert alert-danger" role="alert">
          <%= alert %>
        </div>
      <% end %>
      <div class="login-wrapper">
            <div class="box">
                <div class="content-wrap">
                    <h6><%= t('login') %></h6>
                    <img src="<%= asset_url 'logo.jpg' %>" class="img-login"><br/><br/>
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('email') %>
                        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('password') %>

                        <% if devise_mapping.rememberable? -%>
                          <div class="field">
                            <%= f.check_box :remember_me %>
                            <%= f.label t('remember_me') %>
                          </div>
                        <% end -%>

                      <div class="actions">
                        <%= f.submit t('login'), class: 'btn btn-primary signup' %>
                      </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
  </div>
</div>
