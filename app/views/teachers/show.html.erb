<div class="row">
  <div class="col-md-12">
    <div class="content-box-large">
     <% if notice %>
     <div class="alert alert-success" role="alert">
       <%= notice %>
     </div>
     <% end %>
      <div class="col-md-12">
        <div class="col-md-4">
          <h3 class="text-primary"><%= t('show_teacher')%></h3>
        </div>
      </div>
      <div class="panel-body">
        <table class="table table-striped">
            <tbody>
              <tr>
                <th><%= t('name') %></th>
                <td><%= @teacher.name %></td>
              </tr>
              <tr>
                <th><%= t('ssn') %></th>
                <td><%= @teacher.ssn %></td>
              </tr>
              <tr>
                <th><%= t('salary') %></th>
                <td><%= @teacher.salary %></td>
              </tr>
              <tr>
                <th><%= t('phone_number') %></th>
                <td><%= @teacher.phone_number %></td>
              </tr>
            </tbody>
        </table>
      </div>
      <%= link_to t('edit'), edit_teacher_path(@teacher) %> |
      <%= link_to t('back') , teachers_path %>
    </div>
  </div>
</div>
